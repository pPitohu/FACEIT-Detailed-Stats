{
    "update_url": "https://clients2.google.com/service/update2/crx",
    "name": "FACEIT Detailed CS2 Stats",
    "description": "Displaying detailed CS2 stats based on data from FACEIT API",
    "version": "1.2.4",
    "manifest_version": 3,
    "minimum_chrome_version": "88",
    "host_permissions": [
        "https://open.faceit.com/"
    ],
    "content_scripts": [
        {
            "run_at": "document_idle",
            "matches": [
                "https://www.faceit.com/*"
            ],
            "js": [
                "dist/index.js"
            ]
        }
    ],
    "icons": {
        "128": "icon-128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "dist/*.js"
            ],
            "matches": [
                "https://www.faceit.com/*"
            ]
        }
    ]
}